Unit 2.1
source code
#include <stdio.h>
int main(){
    int arrive = 0;
    int totalpay = 0;
    arrive = (arrive <= 12);
    scanf("%d", &arrive);
    totalpay = 10 + (5*arrive);
    if(totalpay <= 53){
        printf("%d", totalpay);
    }
    else{
        printf("53");
    }
    return 0;
}

official code
#include <stdio.h>
int main() {
    int arrivalHour = 0;
    scanf("%d", &arrivalHour);
    int total = 10+5*arrivalHour;
    int totalExceeds53 = total > 53;
    if(totalExceeds53){
        printf("53");
    }else{
        printf("%d", total);
    }
    return 0;
}
