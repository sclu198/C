Unit 1.3 (***)
Source code
#include <stdio.h>
int main(){
    int count, grade, sum;
    count = 0;
    grade = 0;
    sum = 0;
    double avg;
    scanf("%d", &count);
    int i; for(i=0; i<count; i++){
            scanf("%d", &grade);
            sum = sum + grade;
    }
    avg = ((double)sum / count);
    printf("%.2lf", avg);
    
    return 0;
}

official code
#include <stdio.h>

int main(void) {
    int num, grade, i;
    int sum = 0;
    double doubSum;
    
    scanf("%d", &num);
    for(i=0 ; i < num ; i++){
        scanf("%d", &grade);
        sum = sum + grade;
    }
    doubSum = (double) sum;
    printf("%.2lf", doubSum/num);
    return(0);
}
